<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="deven_signup" resource="default" engine="innodb" comment="Signup Table">
        <column xsi:type="int" name="id" nullable="false" identity="true" unsigned="true" comment="ID"/>
        <column xsi:type="varchar" name="name" nullable="false" length="255" comment="Name"/>
        <column xsi:type="varchar" name="email" nullable="false" length="255" comment="Email"/>
        <column xsi:type="varchar" name="password" nullable="false" length="255" comment="Password"/>
        <column xsi:type="varchar" name="address" nullable="false" length="255" comment="Address"/>
        <column xsi:type="varchar" name="user_type" nullable="false" length="100" comment="User Type"/>
        <column xsi:type="varchar" name="product_type" nullable="false" length="100" comment="Product"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="id"/>
        </constraint>
    </table>
</schema>
